<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahul.shri.fiveinaline.SplachScreen"
    android:background="@drawable/test">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/fiveinlinesplash"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <ImageButton
            android:onClick="soundControl"
            android:id="@+id/ibSound"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/unmute_home"
           />
        <ImageView
            android:id="@+id/ivHowToPlay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:onClick="playGame"
            android:background="@drawable/playbutton"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:layout_margin="7dp" />
    </LinearLayout>

</LinearLayout>
